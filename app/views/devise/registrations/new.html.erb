<style>  
  h2{
    padding-top: 100px;
    line-height: 64px;
    color: white;
    padding-left: 15px;
    text-align: center;
    font:  'Avenir Next', 'Hiragino Sans', sans-serif;
  }
  .field {
    width: 600px;
    margin: 0 auto;
  }
  .field h1 {
    text-align: center;
    font-weight: normal;
  }
  .field .button {
    margin: 20px auto 0;
    display: block;
    width: 200px;
    background-color: #8888bb;
    line-height: 44px;
    text-align: center;
    font-size: 22px;
    border-radius: 6px;
    appearance: none;
    border: none;
    color: #fff;
  }
  .field input[type="text"],
  .field input[type="email"],
  .field input[type="password"] {
    width: 100%;
    border-radius: 4px;
    line-height: 32px;
    border: 1px solid #ccc;
    padding: 0 15px;
    background-color: rgb(250, 255, 189) !important;
    background-image: none !important;
    color: rgb(0, 0, 0) !important;
}
  .button{
    margin: 20px auto 0; 
    display: block;
    width: 200px;
    background-color: #8888bb;
    line-height: 44px;
    text-align: center;
    font-size: 18px;
    border-radius: 6px;
    appearance: none;
    border: none;
    color: #fff;
  }
</style>

<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="field">
      <p>おなまえ</p>
        <%= f.text_field :name, placeholder: " 例) taroutanaka、たなか、etc.." %>
    </div>
    <div class="field">
      <p>メールアドレス</p>
        <%= f.email_field :email, placeholder: "例) tanaka.tarou@email.com" %>
    </div>
    <div class="field">
      <p>パスワード</p>
        <%= f.password_field :password, placeholder: '6文字以上、半角英数字で入力してください' %>
    </div>
    <div class="field">
      <p>パスワード(再確認)</p>
        <%= f.password_field :password_confirmation, placeholder: '6文字以上、半角英数字で入力してください' %>
    </div>
    <div class="field">
      <p>スキル・特技（カンマ区切り</p>
        <%= text_field_tag 'user[skill_list]', @user.skill_list.join(','),placeholder: '例）縄猟,ボルト式ライフル,上下二連式散弾銃' %>
    </div>  
    
    <div class="actions">
      <%= f.submit "登録する", :class=>"button" %>
    </div>
<% end %>


