<!DOCTYPE html>
<html>
  <head>
    <title>HunterApp</title>
   
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <nav>
        <div class="header-logo">
          <%= link_to "HunterApp", root_path %>
        </div>
    
        <ul class="header-menus">
          <li><%= link_to "HunterAppとは", home_about_path %></li>
          <li>
            <% if user_signed_in? %> 
              <%= link_to current_user.name ,user_path(current_user) %>さんの活動記録  
          </li>
          <li><%= link_to '新規投稿', new_post_path %></li>
          <li><%= link_to "プロフィール変更", edit_user_registration_path %></li> 
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          <li><%= link_to "投稿一覧", posts_path %></li>
          <li><%= link_to "マイページ", user_path(current_user) %></li>
          <li><%= link_to "お友達を探す", users_path %></li>
            <% else %>
          <li><%= link_to "サインイン", new_user_registration_path %></li> 
          <li><%= link_to "ログイン", new_user_session_path %></li>
            <% end %>
        </ul>
      </nav>
    </header>  
   <%= yield %>
  </body> 
</html> 
